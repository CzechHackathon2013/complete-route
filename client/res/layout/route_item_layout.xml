<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:orientation="horizontal" android:layout_height="wrap_content" android:id="@+id/route_item" android:background="#fff"
  android:focusable="true" android:baselineAligned="true" android:paddingTop="5dp">

    <ImageView android:id="@+id/routekey_item_icon" android:layout_width="48dp" android:layout_height="wrap_content" android:layout_gravity="center_vertical|top" android:layout_marginLeft="5dip" android:src="@drawable/square_dashed_rounded_128"
               android:layout_marginRight="5dip"></ImageView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/route_item_name"
            android:id="@+id/route_item_desc" android:textSize="20dp" android:textColor="@android:color/background_dark"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"/>

</LinearLayout>
