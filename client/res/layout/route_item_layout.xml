<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal" android:layout_height="wrap_content" android:id="@+id/route_item_layout"
        android:background="#F2F2FF"
        android:focusable="true">
    <ImageView android:id="@+id/route_item_ivIcon" android:layout_width="wrap_content"
               android:layout_height="wrap_content" android:layout_gravity="center_vertical"
               android:layout_marginLeft="5dip" android:src="@android:drawable/presence_away"
               android:clickable="true" android:contentDescription="@string/app_description"/>
    <TextView android:layout_height="wrap_content" android:id="@+id/tvRoute" android:textSize="14dip"
              android:textStyle="bold" android:text="@string/route_item_desc" android:layout_marginLeft="10dip"
              android:layout_width="wrap_content" android:layout_marginRight="20dip" android:textColor="#000000"/>

</LinearLayout>
